import math

def advanced_calculator():
    print("Welcome to the Advanced Python Calculator!")
    print("You can perform operations like +, -, *, /, %, **")
    print("Other functions: sqrt(x), factorial(x), sin(x), cos(x), tan(x), log(x), ln(x)")
    print("Type 'exit' to quit.\n")

    while True:
        try:
            expr = input("Enter your expression: ").strip()
            
            if expr.lower() == "exit":
                print("Goodbye!")
                break

            # Handling advanced functions
            if expr.startswith("sqrt"):
                num = float(expr[5:-1])
                result = math.sqrt(num)
            elif expr.startswith("factorial"):
                num = int(expr[10:-1])
                result = math.factorial(num)
            elif expr.startswith("sin"):
                num = float(expr[4:-1])
                result = math.sin(math.radians(num))
            elif expr.startswith("cos"):
                num = float(expr[4:-1])
                result = math.cos(math.radians(num))
            elif expr.startswith("tan"):
                num = float(expr[4:-1])
                result = math.tan(math.radians(num))
            elif expr.startswith("log"):
                num = float(expr[4:-1])
                result = math.log10(num)
            elif expr.startswith("ln"):
                num = float(expr[3:-1])
                result = math.log(num)
            else:
                # Basic arithmetic
                result = eval(expr)
            
            print("Result:", result)
        
        except Exception as e:
            print("Error:", e)

# Run the calculator
advanced_calculator()

